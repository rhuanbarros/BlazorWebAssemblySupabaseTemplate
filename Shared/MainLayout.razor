@inherits LayoutComponentBase

@inject SupabaseService SupabaseService
@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
    
        <AuthorizeView>
            <Authorized>
                <MudChip Color="Color.Primary" OnClick="OnClickLogout">Logout</MudChip>
            </Authorized>
            <NotAuthorized>
                <MudChip Color="Color.Primary" Link="/login">Login</MudChip>                
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Application</MudText>
        </MudDrawerHeader>
        
@* ********************************** MENU ********************************** *@

        <MudNavMenu Color="Color.Secondary">
            <MudNavLink Href="/crud" Match="NavLinkMatch.Prefix" Icon="@Icons.Filled.Storage">
                Crud table
            </MudNavLink>
        </MudNavMenu>


@* ********************************** MENU ********************************** *@
    
    </MudDrawer>
    <MudMainContent Class="d-flex flex-column" Style="height:100vh !important">
            @Body
    </MudMainContent>
</MudLayout>
