@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
    
        <AuthorizeView>
            <Authorized>
                <MudChip Link="/login" Color="Color.Primary">Logout</MudChip>
            </Authorized>
            <NotAuthorized>
                <MudChip Color="Color.Primary">Login</MudChip>                
            </NotAuthorized>
        </AuthorizeView>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Application</MudText>
        </MudDrawerHeader>
        <MudList Clickable="true">
        <MudListItem Text="Inbox" Icon="@Icons.Material.Filled.Inbox" />
        <MudListItem Text="Sent" Icon="@Icons.Material.Filled.Send" />
        <MudDivider />
        <MudListItem Text="Trash" />
        <MudListItem Text="Spam" />
    </MudList>
    </MudDrawer>
    <MudMainContent Class="d-flex flex-column" Style="height:100vh !important">
        @* <MudContainer MaxWidth="MaxWidth.False" Class="flex pa-0 ma-0" Style="height: 100% !important"> *@
            @Body
        @* </MudContainer> *@
    </MudMainContent>
</MudLayout>
