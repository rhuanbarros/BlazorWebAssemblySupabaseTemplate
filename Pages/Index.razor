@page "/"

<PageTitle>Index</PageTitle>

<div class="pa-16">


    <h1>Hello, world!</h1>

    Welcome to your new app.

    <MudContainer Class="d-flex justify-center align-center">
        <MudPaper Elevation="5" Class="pa-10" style="text-align:center">
            <MudContainer Class="d-flex flex-column justify-center" style="width: 450px">

                <AuthorizeView>
                    <Authorized>

                        <MudText Typo="Typo.h5">Congratulatons! You are logged in!</MudText>

                    </Authorized>
                    <NotAuthorized>
                        <MudText Typo="Typo.h5">You are not allowed to see this content</MudText>
                        <br>
                        <MudButton Color="Color.Primary" Variant="Variant.Filled" Link="/login">Login</MudButton>
                    </NotAuthorized>
                </AuthorizeView>

            </MudContainer>
        </MudPaper>
    </MudContainer>

</div>